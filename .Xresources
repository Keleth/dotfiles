! Xft ---------------------------------
Xft.dpi:       96
Xft.autohint:  false
Xft.antialias: true
Xft.hinting:   true
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.rgba:      rgb


! Urxvt -------------------------------
URxvt.font: xft:JetBrainsMonoNL Nerd Font:size=12
URxvt.perl-ext-common: "default,clipboard,selection-to-clipboard,matcher,tabbed,-searchable-scrollback"
!URxvt.keysym.Meta-S:  builtin-string:
!URxvt.keysym.Meta-Shift-S:  searchable-scrollback:start

URxvt*shading:85
URxvt*saveLines: 3200

!URxvt.font: xft:monaco:size=10
! clickable links
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1
! clipboard
URxvt.clipboard.autocopy: true
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
! tabs
URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg: 3
URxvt.tabbed.tab-bg: 0
! scrollbar
URxvt*scrollBar: true
URxvt*scrollBar_right: true



